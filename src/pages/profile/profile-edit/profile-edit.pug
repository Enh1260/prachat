extends ../../../layouts/profile/profile.pug
block variables
	- var linkBack = '/src/pages/profile/profile-view/profile-view.pug'
block append scripts
block profile
	.profile__title Редактировать профиль
	.profile__head
		.profile__avatar
			button.profile__avatar-action Сменить аватар
	form.profile__form
		.profile__field
			label.profile__label Почта
				input.profile__input(
					name='email'
					placeholder='pochta@yandex.ru'
				)
		.profile__field
			label.profile__label Логин
				input.profile__input(
					name='login'
					placeholder='ivanivanov'
				)
		.profile__field
			label.profile__label Имя
				input.profile__input(
					name='first_name'
					placeholder='Иван'
				)
		.profile__field
			label.profile__label Фамилия
				input.profile__input(
					name='second_name'
					placeholder='Иванов'
				)
		.profile__field
			label.profile__label Имя в чате
				input.profile__input(
					name='display_name'
					placeholder='Иван'
				)
		.profile__field
			label.profile__label Телефон
				input.profile__input(
					name='phone'
					placeholder='+7 (909) 967 30 30'
				)
	button.default-button Сохранить